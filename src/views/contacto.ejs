<%- include('includes/heade.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <!-- <div class="col-lg-2"></div> -->
    <div class="col-lg-12 my-3">
        <h1 class="text-center">Contacto</h1>
        <p class="text-center lead">Crie ou edite seu contacto</p>

        <%-include('includes/message.ejs')  %>

      <% if(contacto._id) { %>
        <form action="/contacto/edit/<%= contacto._id %>" method="POST">
      <% }else{ %>
        <form action="/contacto/register" method="POST">
      <% } %> 
        
          <input type="hidden" name="_csrf" value="<%= csrfToken%>">
          <div class="form-group">
            <label for="">Nome</label>
            <input type="text" class="form-control" name="nome" value="<%=contacto.nome%>">
          </div>
          <div class="form-group">
            <label for="">Sobrenome</label>
            <input type="text" class="form-control" name="sobrenome" value="<%=contacto.sobrenome%>">
          </div> 
          <div class="form-group">
            <label for="">Email</label>
            <input type="email" class="form-control" name="email" value="<%=contacto.email%>">
          </div>
          <div class="form-group">
            <label for="">Telefone</label>
            <input type="tel" class="form-control" name="telefone" value="<%=contacto.telefone%>">
          </div>
          <button type="submit" class="btn btn-primary">Criar Contacto</button>
      </form>

        
    </div>
    <!-- <div class="col-lg-2"></div> -->
  </div>
</div>

<%- include('includes/footer.ejs') %>
